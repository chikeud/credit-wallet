{
  "compilerOptions": {
    "types": ["express", "node", "jest"],
    "target": "ES2020",

    "module": "CommonJS",
    //"rootDir": "./src",
    "outDir": "dist",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "node"
  },
  "include": ["src/**/*.ts"],
  "exclude": ["src/tests/**/*", "node_modules"]
}
