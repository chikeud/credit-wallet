{
  "compilerOptions": {
    "types": ["express", "node", "jest"],
    "target": "ES2020",

    "module": "CommonJS",
    "rootDirs": ["src", "seeds"],
    "outDir": "dist",
    "typeRoots": ["./src/types", "./node_modules/@types"],
    "strict": true,
    "noImplicitAny": false,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "moduleResolution": "Node"
  },
  "include": ["src/**/*.ts",  "seeds/**/*"],
  "exclude": ["src/tests/**/*", "node_modules"],
  "ts-node": {
    "esm": true
  }
}
